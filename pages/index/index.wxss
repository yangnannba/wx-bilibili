/**index.wxss**/
.mynav-scroll{
  display: flex;
  flex-direction:  column ;
   flex-wrap: nowrap;
   white-space: nowrap;
   margin-bottom: 20rpx;
}
.mynav-item{
  display: inline-block;
  font-size: 30rpx;
  padding:0 20rpx;
  line-height: 60rpx;
}
.my-on{
  border-bottom:4rpx solid #fa729a;
}
swiper{
  width:100%;
  height:188rpx;  
  
}
.swiper-item image{
  width:100%;
  height:188rpx;
}



.indexlist{
  margin-top:20rpx;
  display: flex;
  flex-wrap: wrap ;
  justify-content:space-between;
}
.indexlist-item{
  width:49%;
  margin-bottom:20rpx;

}
.indexlist-item image{
  width:100%;
  height:220rpx;
  display: block;

}
.indexlist-item-desc{
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box; 
-webkit-box-orient:vertical;
-webkit-line-clamp:2; 
}
.indexlist-item-re{
  position: relative;
}
.indexlist-item-ab{
  position: absolute;
  bottom:0;
  left:0;
  width:100%;

  font-size: 24rpx;
  line-height: 2em;
  background: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,1));
  color:#fff;
  display: flex;
  justify-content:space-around;
}